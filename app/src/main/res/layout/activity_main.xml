<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin" android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:textSize="24dp"
        android:gravity="center"
    />

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp">
        <Button
            android:id="@+id/btSpotify"
            android:layout_height="@dimen/height_button"
            android:background="#EF8C35"
            android:textAllCaps="true"
            android:text="Sportify App"
            />
        <Button
            android:id="@+id/btScore"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_button"
            android:background="#EF8C35"
            android:textAllCaps="true"
            android:text="Score App"
            />
        <Button
            android:id="@+id/btLibrary"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_button"
            android:background="#EF8C35"
            android:textAllCaps="true"
            android:text="Library App"
            />
        <Button
            android:id="@+id/btBuildIt"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_button"
            android:background="#EF8C35"
            android:text="Build it bigger"
            android:textAllCaps="true"
            />
        <Button
            android:id="@+id/btXYZReader"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_button"
            android:background="#EF8C35"
            android:text="xyz reader"
            android:textAllCaps="true"
            />
        <Button
            android:id="@+id/btCapstone"
            android:layout_height="@dimen/height_button"
            android:layout_marginTop="@dimen/padding_button"
            android:background="#C62828"
            android:textColor="#ffffff"
            android:text="Capstone: My own app"
            android:textAllCaps="true"
            />
    </TableLayout>

</LinearLayout>
